{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    {% for id, post in posts %}
        <p><a href="{{path('blog_show', {'id': id})}}"> ID {{ id }}</a></p>
        <h3> {{post.title}} </h3>
        <p> {{post.text}} </p>
        <span> {{post.date|date('H:i:s')}} </span>
    {% endfor %}
{% endblock %}
